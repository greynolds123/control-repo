[user]
  name = "GitLab"
  email = <%= @git_email %>

[core]
  editor = vim
  autocrlf = input

[color]
  ui = true
  log = auto
  branch = auto
  diff = auto
  status = auto

[alias]
  br = branch
  st = status
  ch = checkout

<% if @git_proxy %>
[http]
  proxy = <%= @git_proxy %>
[https]
  proxy = <%= @git_proxy %>  
<% end %>
