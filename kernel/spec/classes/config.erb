require 'spec_helper'
describe 'kernel::config', :type => 'class' do

  context 'On Linux with kernelversion != 'kernel-3.10.0-229.1.2.el7' do
       let :facts do
       {
         :osfamily      => 'linux',
         :concat_basdir => '/tmp',
       }
      
  end   
    it { 
         should contain_class('config').with(:ensure => '$ensure') 
    }
  end
    it {
        should contain_yumrepo('Redhat_7Updates').with(:enable => '1')
    }
  end
    it {
         should contain_package('kernel-3.10.0-229.1.2.el7').with(:ensure => '$ensure')
    }
   end    
  end
end

